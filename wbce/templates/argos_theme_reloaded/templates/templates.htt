<!-- BEGIN main_block -->
<h2>
	{TEXT_ADDONS} &raquo; {TEXT_TEMPLATES}
	<div class="headline-link">
		<i class="fa fa-puzzle-piece"></i> {URL_MODULES}
		&nbsp;&nbsp;|&nbsp;&nbsp;
		<i class="fa fa-language"></i> {URL_LANGUAGES}
	</div>
</h2>

<!-- install ---------------------------------------------------------->
<form name="install" enctype="multipart/form-data" action="install.php" method="post" class="{DISPLAY_INSTALL} fg12 content-box">
	{FTAN}
	<h3 class="fg12">{HEADING_INSTALL_TEMPLATE}</h3>
	<div class="row">
		<div class="fg9">
			<input type="file" name="userfile">
		</div>
		<div class="fg3 right">
			<button type="submit" name="submit">
				<i class="fa fa-fw fa-check"></i>
				{TEXT_INSTALL}
			</button>
		</div>
	</div>
</form>

<div class="fg12 info bot">{CHANGE_TEMPLATE_NOTICE}.</div>

<!-- uninstall -------------------------------------------------------->
<form name="uninstall" action="uninstall.php" method="post" class="{DISPLAY_UNINSTALL} fg12 content-box">
	{FTAN}
	<h3 class="fg12">{HEADING_UNINSTALL_TEMPLATE}</h3>
	<div class="row">
		<div class="fg9">
			<select name="file" class="wdt300">
				<option value="" selected>{TEXT_PLEASE_SELECT}...</option>
				<!-- BEGIN template_list_block -->
				<option value="{VALUE}">{NAME}</option>
				<!-- END template_list_block -->
			</select>
		</div>
		<div class="fg3 right">
			<button type="submit" name="submit" class="danger">
				<i class="fa fa-fw fa-remove"></i>
				{TEXT_UNINSTALL}
			</button>
		</div>
	</div>
</form>

<!-- details ---------------------------------------------------------->
<form name="details" action="details.php" method="post" class="{DISPLAY_LIST} fg12 content-box">
	{FTAN}
	<h3 class="fg12">{HEADING_TEMPLATE_DETAILS}</h3>
	<div class="row">
		<div class="fg9">
			<select name="file" onchange="this.form.submit();" class="wdt300 bot">
				<option value="" selected>{TEXT_PLEASE_SELECT}...</option>
				<!-- BEGIN template_list_block -->
				<option value="{VALUE}">{NAME}</option>
				<!-- END template_list_block -->
			</select>
		</div>
		<div class="fg3 right">
			<!-- no submit button needed here -->
		</div>
	</div>
</form>
<!-- END main_block -->
