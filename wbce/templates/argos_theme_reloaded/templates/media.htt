<!-- BEGIN main_block -->
<!-- left frame - upload & folder handling ------------------------>
<section class="fg4" id="media-upload" class="{DISPLAY_UPLOAD}">

	<h2>{HEADING_UPLOAD_FILES}</h2>

	<section class="fg12 content-box">
		<form name="upload" action="upload.php" method="post" enctype="multipart/form-data">
			{FTAN}
			<div class="fg12" style="margin-top: 5px;">{TEXT_TARGET_FOLDER}:</div>
			<div class="fg12">
				<select name="target" id="upload-target" class="bot" style="width: 100%;">
					<option value="{MEDIA_DIRECTORY}{HOME_DIRECTORY}" selected="selected">{MEDIA_DIRECTORY}{HOME_DIRECTORY}</option>
					<!-- BEGIN dir_list_block -->
					<option value="{NAME}">{NAME}</option>
					<!-- END dir_list_block -->
				</select>
			</div>
			<div class="fg12">
				<label style="font-size: 12px;">
					<input type="checkbox" name="unzip" id="unzip" class="bot">
					{TEXT_UNZIP_FILE}
				</label>
			</div>
			<div id="delzip" class="fg12" style="display: none;">
				<label style="font-size: 12px;">
					<input type="checkbox" name="delzip" id="deletezip">
					{TEXT_DELETE_ZIP}
				</label>
			</div>

			<div class="fg12"><input type="file" name="file1"></div>
			<div class="fg12"><input type="file" name="file2" id="file2" style="display: block;"></div>
			<div class="fg12"><input type="file" name="file3" id="file3" style="display: block;"></div>
			<div class="fg12"><input type="file" name="file4" id="file4" style="display: block;"></div>
			<div class="fg12"><input type="file" name="file5" id="file5" style="display: block;"></div>
			<div class="fg12"><input type="file" name="file6" id="file6" style="display: block;"></div>
			<div class="fg12"><input type="file" name="file7" id="file7" style="display: block;"></div>
			<div class="fg12"><input type="file" name="file8" id="file8" style="display: block;"></div>
			<div class="fg12"><input type="file" name="file9" id="file9" style="display: block;"></div>
			<div class="fg12"><input type="file" name="file10" id="file10" style="display: block;"></div>

			<div class="fg12 top bot">
				<label>
					<input type="checkbox" name="overwrite" id="overwrite" value="yes">
					{TEXT_OVERWRITE_EXISTING} {TEXT_FILES}
				</label>
			</div>
			<div class="fg12">
				<button type="submit" name="submit" style="width: 100%;">
					<i class="fa fa-fw fa-upload"></i>
					{TEXT_UPLOAD_FILES}
				</button>
			</div>
		</form>
	</section>

	<div class="clearfix"></div>

	<h2>{HEADING_CREATE_FOLDER}</h2>

	<section id="media-folder" class="fg12 content-box {DISPLAY_CREATE}">
		<form name="create" action="create.php" method="post">
			{FTAN}
			<div class="fg12" style="margin-top: 5px;">{TEXT_NAME}:</div>
			<div class="fg12">
				<input type="text" name="name" style="width:100%;" class="bot"></div>
			<div class="fg12">{TEXT_TARGET_FOLDER}:</div>
			<div class="fg12">
				<select name="target" id="target-folder" style="width:100%;" class="bot">
					<option value="{MEDIA_DIRECTORY}{HOME_DIRECTORY}" selected>
						{MEDIA_DIRECTORY}{HOME_DIRECTORY}
					</option>
					<!-- BEGIN dir_list_block -->
					<option value="{NAME}">{NAME}</option>
					<!-- END dir_list_block -->
				</select>
			</div>
			<div class="fg12">
				<button type="submit" name="submit" style="width: 100%;">
					<i class="fa fa-fw fa-folder"></i>
					{TEXT_CREATE_FOLDER}
				</button>
			</div>
		</form>
	</section>
</section>
<!-- END main_block -->

<!-- right frame - file browser ----------------------------------->
<section class="fg8" id="media-browser">

	<h2>{HEADING_BROWSE_MEDIA}</h2>

	<section class="fg12 content-box">
		<div class="fg12 {DISPLAY_SETTINGS}" id="media-tools" style="text-align: right; margin-bottom: 5px; margin-top: 10px;">
			<i class="fa fa-gears"></i>&nbsp;
			<a href="setparameter.php" target="browse">{CHANGE_SETTINGS}</a>
			&nbsp;&nbsp;|&nbsp;&nbsp;
			<i class="fa fa-refresh"></i>&nbsp;
			<a href="browse.php?dir={CURRENT_DIR}" target="browse">{TEXT_RELOAD}</a>
		</div>

		<div class="fg12">
			<iframe id="browse-frame" name="browse" width="100%" height="650" src="browse.php" scrolling="yes" frameborder="0"></iframe>
		</div>
	</section>
</section>

<script>
	$(document).ready(function(){
		var leftHeight = $('#media-upload').height();
		$('#browse-frame').height(leftHeight - 90);
	});
</script>
